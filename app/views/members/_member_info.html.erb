<% if !member_info.empty? %>
  <div class="row">
    <!-- Contact Info -->
    <% %w(phone, email, address).each do |info_item| %>
    <% if member_info[info_item] %>
    <div class="member-info-subheader col-xs-5 col-sm-2 col-md-4 info-padded">
      <%= info_item.capitalize %>:
    </div>
    <div class="col-xs-7 col-sm-4 col-md-8 info-padded">
      <%= member_info[info_item] %>
    </div>
    <% end %>
    <% end %>

    <!-- Organizations -->
    <div class="member-info-subheader col-xs-5 col-sm-2 col-md-4 info-padded">
      Organization<%= member.organizations.length == 1 ? "" : "s" %>:
    </div>
    <div class="col-xs-7 col-sm-4 col-md-8 info-padded">
      <%= simple_format(member.organizations.join("\n")) %>
    </div>
    <!-- Other household members -->
    <% if member_info["household_names"].length != 0 %>
      <div class="col-xs-5 col-sm-2 col-md-12 info-padded member-info-subheader other-members">
        Other Household Members:
      </div>
      <div class="col-xs-7 col-sm-4 col-md-9 col-md-offset-3">
        <%= simple_format(member_info["household_names"]) %>
      </div>
    <% end %>
  </div>
<% else %>
  <h4 style="text-align: center"> Sorry no contact info is available for this person </h4>
<% end %>
