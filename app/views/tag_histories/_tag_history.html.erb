<div class="tag-history">
  <div class='row'>
    <div class='col-xs-2 col-sm-1'>
      <span class="fa-stack fa-lg">
        <i class="fa fa-circle fa-stack-2x light"></i>
        <i class="fa fa-tag fa-stack-1x dark"></i>
      </span>
    </div>
    <div class='col-xs-9 col-sm-10 vcenter'>
      <strong><%= person %></strong> <%= changed %> the
      <span class='label label-<%= tag.color %>' ><%= tag.body %></span>
      tag <%= time_ago_in_words(changed_time) %> ago
    </div>
    <% unless tag.organization == "Internal" %>
      <div class='col-xs-1 vcenter'>
        <%= link_to tag_history_path(tag_history, changed: changed, index: index),
              method: :delete,
              remote: true,
              data: { confirm: 'Permanently delete this item?'},
              authenticity_token: true  do |f| %>
          <i class="fa fa-times"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
